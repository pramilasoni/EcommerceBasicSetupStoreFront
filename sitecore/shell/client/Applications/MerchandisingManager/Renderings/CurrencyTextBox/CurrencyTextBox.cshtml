@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel


@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-CurrencyTextBox";
    rendering.Requires.Script("client", "CurrencyTextBox.js");
    var value = rendering.GetString("value", "value");
    var htmlAttributes = rendering.HtmlAttributes;

    if (value != "")
    {
        value = value.AsDecimal().ToString("0.00", System.Globalization.CultureInfo.InvariantCulture); 
    }
}

<input @htmlAttributes
       type="text"
       data-sc-value="@value"
       maxlength="524288">
