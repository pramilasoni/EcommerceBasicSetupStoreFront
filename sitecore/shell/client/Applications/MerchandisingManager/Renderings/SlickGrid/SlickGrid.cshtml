@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.SecurityModel.License
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-SlickGrid";
    rendering.Requires.Script("client", "SlickGrid.js");
    rendering.GetString("Items", "items");
    rendering.GetString("TransformedColumns", "transformedColumns");
    rendering.GetString("SelectedColumns", "selectedColumns");
    rendering.GetString("EntityType", "EntityType");
    rendering.GetString("HasSelectedItems", "hasSelectedItems");
    rendering.GetString("HasChanges", "hasChanges");
    rendering.GetString("HasSingleItemSelected", "hasSingleItemSelected");

    var id = Model.Rendering.Parameters["Id"];
    var entityType = Model.Rendering.Parameters["EntityType"];
    var controlMappings = Model.Rendering.Parameters["ControlMappings"];
    
    var gridId = id.Replace(" ", string.Empty) + "Grid";
    
    rendering.Attributes["data-sc-gridId"] = gridId;
    rendering.Attributes["data-sc-entityType"] = entityType;
    rendering.Attributes["data-sc-controlMappings"] = controlMappings;
    
    var htmlAttributes = rendering.HtmlAttributes;
}
<div @htmlAttributes>
    <div id="@gridId" style="width:100%;height:800px;"></div>
</div>
<link type="text/css" href="~/sitecore/shell/client/Applications/MerchandisingManager/Renderings/TagEditorV1/assets/jquery.tag-editor.css" rel="stylesheet" />
