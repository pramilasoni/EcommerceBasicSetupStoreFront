@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-CommerceCatalogLangauges";
  rendering.Requires.Script("client", "CommerceCatalogLangauges.js");

  rendering.GetString("Languages", "languages");

  rendering.Attributes["data-bind"] = "visible: isVisible";
  
  var htmlAttributes = rendering.HtmlAttributes;
}      
<div @htmlAttributes>
    <div data-bind="foreach: $root['languages']">
        <label data-bind="text: $data['culture']"></label>
        <input type="text" data-bind="attr: { value: $data['catalogName'] }" />
    </div>
</div>
