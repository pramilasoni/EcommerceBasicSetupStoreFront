@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-DateText";
  rendering.Requires.Script("client", "DateText.js");
  var text = rendering.GetString("text", "text");
  var format = rendering.GetString("format", "format");
  if (format.IsEmpty())
  {
      format = "d";
  }
  rendering.AppendClass("sc-text-largetitle");
  var htmlAttributes = rendering.HtmlAttributes;
}      
<div @htmlAttributes>
        @text.AsDateTime().ToString(format, System.Globalization.CultureInfo.CurrentUICulture)
</div>

