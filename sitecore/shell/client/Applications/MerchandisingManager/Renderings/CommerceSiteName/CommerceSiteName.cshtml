@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@using Sitecore.Commerce.Connect.CommerceServer;
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-CommerceSiteName";
  rendering.Requires.Script("client", "CommerceSiteName.js");
  string commerceSiteName = string.Empty;
  var contextManager = CommerceTypeLoader.CreateInstance<ICommerceServerContextManager>();
  if (contextManager != null)
  {
      commerceSiteName = contextManager.SiteName;
  }

  rendering.SetAttribute("data-sc-sitename", commerceSiteName);
  var htmlAttributes = rendering.HtmlAttributes;
}      
<div @htmlAttributes>
</div>
