@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
    rendering.Class = "sc-tageditor";
    rendering.Requires.Script("client", "TagEditorV1.js");
    var id = rendering.GetString("Id", "Id");
    var text = rendering.GetString("Text", "Text");
    var containerId = id.Replace(" ", string.Empty) + "Container";

    var htmlAttributes = rendering.HtmlAttributes;

}
<div @htmlAttributes data-sc-text="@text">
    <textarea id="@containerId"></textarea>
</div>
<link type="text/css" href="~/sitecore/shell/client/Applications/MerchandisingManager/Renderings/TagEditorV1/assets/jquery.tag-editor.css" rel="stylesheet" />

