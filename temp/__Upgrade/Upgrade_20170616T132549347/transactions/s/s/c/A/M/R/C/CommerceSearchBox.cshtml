@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-CommerceSearchBox";
  rendering.Requires.Script("client", "CommerceSearchBox.js");
  
  rendering.GetString("Items", "items");
  rendering.GetString("SearchTerm", "searchTerm");
  
  var renderingId = this.Model.Rendering.Parameters["Id"];
  var inputId = renderingId + "-text";
  var htmlAttributes = rendering.HtmlAttributes;
}      
<div @htmlAttributes>
    <input id="@inputId" type="text" />
</div>
